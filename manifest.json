{
    "manifest_version": 3,
    "name": "YTM_UIHaul",
    "description": "Overhaul the UI for youtube music",
    "version": "1.0",
    "action": {
      "default_popup": "ytm.html",
      "default_icon": "ytm_icon.png"
    },
    "content_scripts": [
      {
        "js": ["scripts/main.js"],
        "matches": [
          "https://music.youtube.com/playlist*"
        ]
      }
    ]
  }